# Configuración de la aplicación
NODE_ENV=development
PORT=3000
APP_VERSION=1.0.0

# Configuración de base de datos
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=root
DB_PASSWORD=
DB_DATABASE=futbol_app

# Configuración de JWT (para validación local de tokens de BackUPyUC)
JWT_SECRET=your-jwt-secret-key-here
JWT_PUBLIC_KEY=your-jwt-public-key-here

# URLs de microservicios
BACK_UPYUC_URL=http://localhost:3001
BACK_MP_URL=http://localhost:3002

# Configuración de CORS
CORS_ORIGIN=http://localhost:3000

# Configuración de logging
LOG_LEVEL=debug

# Configuración de rate limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100

# Configuración de AWS (para producción)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key

# Configuración de Redis (opcional, para cache)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Configuración de monitoreo
ENABLE_METRICS=true
METRICS_PORT=9090 